<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Spirit</th>
      <th>Volume</th>
      <th>Proof</th>
      <th>Released</th>
      <th>Price</th>
      <th>Acquired</th>
      <th>Box</th>
      <th>Notes</th>
      <th>Score</th>
      <th>Tradable</th>
      <th>Sellable</th>
      <th>Stocked</th>
      <% unless @state %>
        <th>Open</th>
        <th>Finished</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bottles.each do |bottle| %>
      <tr>
        <td><%= bottle.name %></td>
        <td><%= bottle.spirit %></td>
        <td><%= bottle.volume %></td>
        <td><%= bottle.proof %></td>
        <td><%= bottle.released %></td>
        <td><%= number_to_currency(bottle.price) %></td>
        <td><%= bottle.acquired_on.strftime('%b %Y') %></td>
        <td><%= bottle.box %></td>
        <td><%= bottle.notes %></td>
        <td><%= bottle.score %></td>
        <td><%= bottle.tradable %></td>
        <td><%= bottle.sellable %></td>
        <td><%= bottle.stocked %></td>
        <% unless @state %>
          <td><%= bottle.open %></td>
          <td><%= bottle.finished %></td>
        <% end %>
        <td><%= link_to 'Show', bottle %></td>
        <td><%= link_to 'Edit', edit_bottle_path(bottle) %></td>
        <td><%= link_to 'Destroy', bottle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

